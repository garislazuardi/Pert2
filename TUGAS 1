#include <iostream>

using namespace std;

int main()
{char pilih;

    do {int a;

    cout << "Masukan Nilai A : ";cin >> a;

    if ( a == 0)
        {cout << a << "Ini adalah Bilangan Netral" << endl;}
    else if (a % 2 == 0)
        {cout << "Ini adalah Bilangan Genap";}

    else
        {cout << "Ini adalah Bilangan Ganjil";}
   
    cout << endl;

}while (pilih == 'y');
}
